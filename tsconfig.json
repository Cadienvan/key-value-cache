{
  "compilerOptions": {
    "module": "ES2020",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node16",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "target": "es6"
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.js"]
}
